# Stripe Configuration
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Get this from your Stripe Product's pricing
# Create a recurring product at https://dashboard.stripe.com/products
# Set it to £10/week recurring
STRIPE_PRICE_ID=price_...

# Your application URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Resend Email Configuration
# Sign up at https://resend.com and get your API key
# Free tier: 3,000 emails/month
RESEND_API_KEY=re_...

# Email sender address (optional)
# Default: 'Sparemate <onboarding@resend.dev>' (Resend's test domain)
# For production with verified domain: 'Sparemate <notifications@yourdomain.com>'
# Leave blank to use default
EMAIL_FROM=

# Cron Job Security
# Generate a random secret: openssl rand -base64 32
# This protects your cron endpoint from unauthorized access
# NOTE: Vercel Cron also authenticates via user-agent, so this is optional for production
# but required for manual testing
CRON_SECRET=your-secret-key-here

# Supabase Configuration
# Get these from https://supabase.com/dashboard → Your Project → Settings → API
SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGc...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGc...

# Supabase Database (Postgres)
# Get these from https://supabase.com/dashboard → Your Project → Settings → Database
POSTGRES_URL=postgres://postgres.xxx:password@aws-1-us-west-1.pooler.supabase.com:6543/postgres?sslmode=require&supa=base-pooler.x
POSTGRES_PRISMA_URL=postgres://postgres.xxx:password@aws-1-us-west-1.pooler.supabase.com:6543/postgres?sslmode=require&pgbouncer=true
POSTGRES_URL_NON_POOLING=postgres://postgres.xxx:password@aws-1-us-west-1.pooler.supabase.com:5432/postgres?sslmode=require
POSTGRES_USER=postgres
POSTGRES_HOST=db.xxx.supabase.co
POSTGRES_PASSWORD=your-password
POSTGRES_DATABASE=postgres
